@model StudentProjectAttempt6.Models.ViewModels.EnrollmentViewModel

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Enrollment</h2>
        </div>
        <div asp-validation-summary="All" />
        <div class="mb-3">
            <label asp-for="Enrollment.StudentId"></label>
            <select asp-for="Enrollment.StudentId" class="form-control" asp-items="@Model.StudentsList"></select>
            <span asp-validation-for="Enrollment.StudentId" class="text-danger" />
        </div>
        <div class="mb-3">
            <label asp-for="Enrollment.Grade"></label>
            <input asp-for="Enrollment.Grade" class="form-control" />
            <span asp-validation-for="Enrollment.Grade" class="text-danger" />
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-controller="Enrollment" asp-action="Index" class="btn btn-secondary">
            Back to list
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }